---
import { Image } from "astro:assets";
import MainIcon from "../images/main_icon.png";
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionLayout from "../layouts/SectionLayout.astro";
import LinkLogo from "../components/LinkLogo.astro";
import GradientBorderButton from "../components/GradientBorderButton.astro";
import TerminalStyleList from "../components/TerminalStyleList.astro";
import TechStackLogo from "../components/TechStackLogo.astro";
---

<BaseLayout>
	<Image
		class="w-1/3 2xl:w-1/5 aspect-square mx-auto mt-20 rounded-full"
		src={MainIcon}
		alt="aphananthe42のアイコン"
	/>
	<h1
		class="text-white text-3xl 2xl:text-9xl text-center font-roboto font-bold pt-9"
	>
		aphananthe42
	</h1>
	<div class="flex justify-center gap-6 mt-6">
		<LinkLogo href="https://github.com/aphananthe42" linkType="GitHub" />
		<LinkLogo href="https://x.com/aphananthe42" linkType="X" />
		<LinkLogo href="https://zenn.dev/aphananthe42" linkType="Zenn" />
		<LinkLogo
			href="https://atcoder.jp/users/aphananthe42"
			linkType="AtCoder"
		/>
	</div>
	<div class="flex justify-center gap-3 mt-8">
		<GradientBorderButton
			title="Tech Blog"
			startColor="from-purple-600"
			endColor="to-blue-500"
			focusColor="ring-blue-300"
			darkColor="ring-blue-800"
		/>
		<GradientBorderButton
			title="Diary"
			startColor="from-purple-500"
			endColor="to-pink-500"
			focusColor="ring-purple-200"
			darkColor="ring-purple-800"
		/>
	</div>
	<SectionLayout title="About Me">
		<TerminalStyleList command="$ whois aphananthe42" listStyle="list-none">
			<li>Name: aphananthe42</li>
			<li>Created: 1994-12-04</li>
			<li>Address: Kanagawa, Japan</li>
			<li>Job: Freelance iOS Engineer</li>
			<li>ETH Address: ...</li>
			<li>PGP Key: ...</li>
			<li>Favorite Food: miso soup, salad, dried persimmon</li>
		</TerminalStyleList>
		<TerminalStyleList command="$ ls skills/" listStyle="list-disc">
			<li>iOS Experience 5+ years</li>
			<li>AWS Certified Cloud Practitioner</li>
			<li>AWS Certified Developer</li>
			<li>AWS Certified SysOps Administrator</li>
			<li>Certified ScrumMaster(CSM)</li>
			<li>TOEIC 860</li>
		</TerminalStyleList>
		<TerminalStyleList command="$ history" listStyle="list-decimal">
			<li>
				Software house (~2022) <br />
				&emsp;&thinsp;as iOS Engineer
			</li>
			<li>
				Axia Works LLC (~2023) <br />
				&emsp;&thinsp;as iOS Engineer and Executive Officer
			</li>
			<li>Freelance iOS Engineer (current)</li>
		</TerminalStyleList>
	</SectionLayout>
	<SectionLayout title="Works">
		<ul class="list-disc marker:text-white ml-4">
			<li>
				<a href="https://aphananthe42.net" target="_blank">
					<p class="text-lg text-blue-600 mt-4 font-roboto font-bold">
						aphananthe42.net
					</p>
				</a>
			</li>
		</ul>
		<p class="text-md text-white mt-1 ml-4 font-roboto font-normal italic">
			That's this. <br />
			aphananthe42.net is my personal website.
		</p>
		<div class="flex gap-3 mt-2 ml-4">
			<TechStackLogo
				href="https://www.cloudflare.com"
				linkType="Cloudflare"
			/>
			<TechStackLogo href="https://astro.build" linkType="Astro" />
			<TechStackLogo
				href="https://tailwindcss.com"
				linkType="TailwindCSS"
			/>
		</div>
		<ul class="list-disc marker:text-white ml-4">
			<li>
				<a href="https://google.com" target="_blank">
					<p class="text-lg text-blue-600 mt-4 font-roboto font-bold">
						AIFrame
					</p>
				</a>
			</li>
		</ul>
		<p class="text-md text-white mt-1 ml-4 font-roboto italic">
			Under development...
		</p>
	</SectionLayout>
	<SectionLayout title="Contact">
		<p class="text-md text-white font-roboto font-normal italic mt-4">
			Please contact me via DM on X or through a PGP-encrypted email.
		</p>
	</SectionLayout>
	<hr class="mt-10" />
	<div class="p-6">
		<p class="text-center text-white text-sm font-roboto font-normal">
			© 2024 aphananthe42
		</p>
	</div>
</BaseLayout>
