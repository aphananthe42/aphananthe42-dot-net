---
import "@fontsource/roboto";
import "@fontsource-variable/noto-sans-jp";
import { Image } from "astro:assets";
import MainIcon from "../images/main_icon.png";
import GithubIcon from "../images/github_icon.svg";
import XIcon from "../images/x_icon.svg";
import ZennIcon from "../images/zenn_icon.svg";
import AtCoderIcon from "../images/atcoder_icon.png";
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>aphananhe42.net</title>
	</head>
	<body class="w-screen h-screen bg-slate-950">
		<Image
			class="w-1/3 2xl:w-1/5 aspect-square mx-auto mt-20 rounded-full"
			src={MainIcon}
			alt="aphananthe42のアイコン"
		/>
		<h1
			class="font-roboto text-white text-3xl 2xl:text-9xl text-center pt-9"
		>
			aphananthe42
		</h1>
		<div class="flex justify-center gap-6 mt-6">
			<a
				href="https://github.com/aphananthe42"
				target="_blank"
				class="inline-block"
			>
				<Image
					class="w-9 2xl:w-16 aspect-square"
					src={GithubIcon}
					alt="GitHubのアイコン"
				/>
			</a>
			<a
				href="https://x.com/aphananthe42"
				target="_blank"
				class="inline-block"
			>
				<Image
					class="w-9 2xl:w-16 aspect-square"
					src={XIcon}
					alt="Xのアイコン"
				/>
			</a>
			<a
				href="https://zenn.dev/aphananthe42"
				target="_blank"
				class="inline-block"
			>
				<Image
					class="w-9 2xl:w-16 aspect-square"
					src={ZennIcon}
					alt="Zennのアイコン"
				/>
			</a>
			<a
				href="https://atcoder.jp/users/aphananthe42"
				target="_blank"
				class="inline-block"
			>
				<Image
					class="w-9 2xl:w-16 aspect-square"
					src={AtCoderIcon}
					alt="AtCoderのアイコン"
				/>
			</a>
		</div>
		<div class="flex justify-center gap-3 mt-8">
			<button
				type="button"
				class="text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"
			>
				Tech Blog
			</button>
			<button
				type="button"
				class="text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"
			>
				Diary
			</button>
		</div>
	</body>
</html>
