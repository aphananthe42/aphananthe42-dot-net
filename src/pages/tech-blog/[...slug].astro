---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Prose from "../../components/Prose.astro";
import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
    const techBlogEntries = await getCollection("tech-blog");
    return techBlogEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout>
    <div class="font-notosansjp mx-auto px-6 my-10">
        <h1
            class="text-white text-2xl lg:text-4xl text-center font-bold mt-9 lg:mt-20"
        >
            {entry.data.title}
        </h1>
        <div class="mt-4 text-right">
            {
                entry.data.tags.map((tag: string) => (
                    <span class="bg-blue-200 rounded-full mx-0.5">
                        <span class="text-black px-2">{tag}</span>
                    </span>
                ))
            }
        </div>
        <p class="text-white mt-2 text-right">{entry.data.date}</p>
        <Prose>
            <Content />
        </Prose>
    </div>
    <Footer />
</BaseLayout>
