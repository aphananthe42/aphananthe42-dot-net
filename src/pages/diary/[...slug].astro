---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Prose from "../../components/Prose.astro";
import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
    const diaryEntries = await getCollection("diary");
    return diaryEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout>
    <div class="xl:w-2/5 mx-auto font-notosansjp px-6 my-10">
        <h1
            class="text-white text-2xl lg:text-4xl text-center font-bold mt-9 lg:mt-20"
        >
            {entry.data.title}
        </h1>
        <p class="text-white mt-2 text-right">
            {entry.data.date.toISOString().slice(0, 10)}
        </p>
        <Prose>
            <Content />
        </Prose>
    </div>
    <Footer />
</BaseLayout>
